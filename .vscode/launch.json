{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run CLI Command",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/src/index.js",
            "args": [
                "dump",
                "--format",
                "json",
                "--output",
                "icd_data.json"
            ],
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}